<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="15sp">

    <TextView
        android:id="@+id/ColorBlock"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5sp"
        android:gravity="center">

        <TextView
            android:layout_width="70sp"
            android:layout_height="35sp"
            android:text="Red"
            android:textColor="#F70000"
            android:textSize="20sp"/>

        <SeekBar
            android:id="@+id/sbRed"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:min="0"
            android:max="255"/>

        <TextView
            android:id="@+id/txtRed"
            android:layout_width="70sp"
            android:layout_height="35sp"
            android:text="0"
            android:textColor="#F70000"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5sp"
        android:gravity="center">

        <TextView
            android:layout_width="70sp"
            android:layout_height="35sp"
            android:text="Green"
            android:textColor="#00F541"
            android:textSize="20sp"/>

        <SeekBar
            android:id="@+id/sbGreen"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:min="0"
            android:max="255"/>

        <TextView
            android:id="@+id/txtGreen"
            android:layout_width="70sp"
            android:layout_height="35sp"
            android:text="0"
            android:textColor="#00F541"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5sp"
        android:gravity="center">

        <TextView
            android:layout_width="70sp"
            android:layout_height="35sp"
            android:text="Red"
            android:textColor="#1000f5"
            android:textSize="20sp"/>

        <SeekBar
            android:id="@+id/sbBlue"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:min="0"
            android:max="255"/>

        <TextView
            android:id="@+id/txtBlue"
            android:layout_width="70sp"
            android:layout_height="35sp"
            android:text="0"
            android:textColor="#1000f5"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5sp">

        <TextView
            android:layout_width="67.5dp"
            android:layout_height="35sp"
            android:text="RGB"
            android:textSize="20sp"
            android:textColor="#c8c8c8"
            android:layout_marginLeft="0.0dp"
            android:id="@+id/textView1"
            android:layout_marginRight="0.0dp"
            android:layout_marginTop="0.0dp" />

        <TextView
            android:id="@+id/txtRGB"
            android:layout_width="154.0dp"
            android:layout_height="36.0dp"
            android:text="(0, 0, 0)"
            android:textSize="20sp"
            android:textColor="#c8c8c8"/>

        <TextView
            android:id="@+id/txtHex"
            android:layout_width="114.5dp"
            android:layout_height="35sp"
            android:text="\#000000"
            android:textSize="20sp"
            android:textColor="#c8c8c8"/>

    </LinearLayout>

</LinearLayout>